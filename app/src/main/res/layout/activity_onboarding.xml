<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_blue_primary">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.viewpager.widget.ViewPager>

    <ImageView
        android:id="@+id/imageOnBoarding1"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:src="@drawable/on_boarding_1"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageOnBoarding2"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:src="@drawable/on_boarding_2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageOnBoarding1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageOnBoarding3"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:src="@drawable/on_boarding_3"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageOnBoarding1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageOnBoarding4"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:src="@drawable/on_boarding_3"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageOnBoarding1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/next_btn"
            android:layout_toEndOf="@+id/skip_btn"
            android:gravity="center"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/skip_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:elevation="1dp"
            android:text="@string/skip_btn"
            android:textColor="@color/color_blue_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/next_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:elevation="1dp"
            android:text="@string/next_btn"
            android:textColor="@color/color_blue_primary" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>